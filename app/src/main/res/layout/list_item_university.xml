<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_university_logo_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/li_ums" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingLeft="12dp">

    <TextView
        android:id="@+id/text_university_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Universitas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/text_university_rank_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Peringkat"
        android:textSize="14sp"
        android:textColor="#333333"/>
</LinearLayout>

</LinearLayout>